TARGET = 81_libretro$(SOEXT)

DEFINES  +=
CFLAGS   += -Wall
CXXFLAGS += -Wall
LDFLAGS  +=

HEADERS = $(ROMS:.rom=.h) $(SNAPS:.z81=.h)
OBJS    = $(SOURCES_C:.c=$(OBJEXT)) $(SOURCES_CXX:.cpp=$(OBJEXT))

%$(OBJEXT): %.cpp
	$(CXX) -c -o $@ $< $(CXXFLAGS)

%$(OBJEXT): %.c
	$(CC) -c -o $@ $< $(CFLAGS)

%$(OBJEXT): %.S
	$(CC_AS) -c -o $@ $< $(CFLAGS)

%.h: %.rom
	xxd -i $< | sed "s/unsigned/const unsigned/g" | sed "s/___//g" > $@

%.h: %.z81
	xxd -i $< | sed "s/unsigned/const unsigned/g" | sed "s/___//g" > $@

all: $(TARGET)

$(TARGET): $(HEADERS) $(OBJS)
	$(CC) -o $@ $(OBJS) $(LDFLAGS)

$(CORE_DIR)/src/snap.o: $(CORE_DIR)/src/snap.c $(HEADERS)

$(CORE_DIR)/src/version.c: FORCE
	cat etc/version.c.templ | sed s/HASH/`git rev-parse HEAD | tr -d "\n"`/g > $@

clean-objs:
	rm -f $(OBJS)

clean: clean-objs
	rm -f $(TARGET)

dist-clean: clean
	rm -f $(HEADERS)

.PHONY: clean-objs clean dist-clean FORCE
